generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  tag       String?   // ← タグ（任意）
  dueDate   DateTime? // ← 期限（任意）
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
}

